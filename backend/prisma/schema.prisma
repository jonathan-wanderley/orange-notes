// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Region {
  brazil
  united_states
  europe
  other
}
model User {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  password         String
  region           Region    @default(united_states)
  stripeCustomerId String?   @unique @map("stripe_customer_id")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt() @map("updated_at")
  deletedAt        DateTime? @map("deleted_at")

  notes        Note[]
  roles        UserRole[]
  subscription Subscription?

  @@map("users")
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  roleId    String   @map("role_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@map("user_roles")
}

model Role {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")

  users UserRole[]

  @@map("roles")
}

enum SubscriptionPlan {
  FREE
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
}

model Subscription {
  id                   String             @id @default(uuid())
  userId               String             @unique @map("user_id")
  stripeSubscriptionId String             @unique @map("stripe_subscription_id")
  stripeSubscriptionPriceId String @map("stripe_subscription_price_id")
  status               SubscriptionStatus @map("status")
  currentPeriodEnd     DateTime           @map("current_period_end")
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt() @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Note {
  id        String   @id @default(uuid())
  title     String   @map("title")
  text      String   @db.Text
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}


enum TransferSubscriptionStatus {
  SUCCESS
  FAILED
}
model TransferSubscriptionLog {
  id        String   @id @default(uuid())
  fromUserEmail  String @map("from_user_email")
  toUserEmail  String @map("to_user_email")
  status    TransferSubscriptionStatus   @map("status")
  message   String? @map("message")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("transfer_subscription_logs")
}
